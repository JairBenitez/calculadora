        <td><%= number_with_precision(@cotizador.info_eth[mes][:monedas], precision: 6) %></td>
        <td><%= number_with_precision(@cotizador.info_eth[mes][:ganancia], precision: 6) %></td>
        <td><%= number_with_precision(@cotizador.info_eth[mes][:total_crypto], precision: 6) %></td>
        <td><%= number_to_currency @cotizador.info_eth[mes][:total_usd] %></td>
        <td><%= number_to_currency @cotizador.info_eth[mes][:total_usd_acum] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

